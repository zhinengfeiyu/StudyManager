<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="BtnClassTimeSet">
        <item name="android:textColor">@color/blue</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="MyTheme" parent="android:style/Theme.Holo.Light.NoActionBar" />

    <style name="EditBg">
        <item name="android:background">@drawable/selector_edit_text</item>
        <item name="android:textColorHint">@color/gray_cc</item>
        <item name="android:textColor">@color/gray_33</item>
    </style>

    <style name="EditBg2" parent="EditBg">
        <item name="android:background">@drawable/selector_edit_text_2</item>
    </style>

    <style name="ClickableBg">
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/selector_pressed</item>
    </style>

    <style name="TimeText" parent="@style/ClickableBg">
        <item name="android:textSize">12sp</item>
        <item name="android:gravity">center</item>
    </style>

    <!--<style name="MeSet">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="custom:leftTextSize">16sp</item>
        <item name="custom:rightTextSize">15sp</item>
    </style>-->

</resources>
