<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <include layout="@layout/common_title" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">
            <TextView
                style="@style/TvClassTimeSet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="上午第一二节：" />
            <Button
                style="@style/BtnClassTimeSet"
                android:id="@+id/btn1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="00:00" />
            <TextView
                style="@style/TvClassTimeSet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:text="到"/>
            <Button
                style="@style/BtnClassTimeSet"
                android:id="@+id/btn2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00:00"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginTop="15dp">
            <TextView
                style="@style/TvClassTimeSet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="上午第三四节："/>
            <Button
                style="@style/BtnClassTimeSet"
                android:id="@+id/btn3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="00:00"/>
            <TextView
                style="@style/TvClassTimeSet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:text="到"/>
            <Button
                style="@style/BtnClassTimeSet"
                android:id="@+id/btn4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00:00"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginTop="15dp">
            <TextView
                style="@style/TvClassTimeSet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="下午第一二节："/>
            <Button
                style="@style/BtnClassTimeSet"
                android:id="@+id/btn5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="00:00"/>
            <TextView
                style="@style/TvClassTimeSet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:text="到"/>
            <Button
                style="@style/BtnClassTimeSet"
                android:id="@+id/btn6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00:00"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginTop="15dp">
            <TextView
                style="@style/TvClassTimeSet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="下午第三四节："/>
            <Button
                style="@style/BtnClassTimeSet"
                android:id="@+id/btn7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="00:00"/>
            <TextView
                style="@style/TvClassTimeSet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:text="到"/>
            <Button
                style="@style/BtnClassTimeSet"
                android:id="@+id/btn8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00:00"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginTop="15dp">
            <TextView
                style="@style/TvClassTimeSet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="晚上第一二节："/>
            <Button
                style="@style/BtnClassTimeSet"
                android:id="@+id/btn9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="00:00"/>
            <TextView
                style="@style/TvClassTimeSet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:text="到"/>
            <Button
                style="@style/BtnClassTimeSet"
                android:id="@+id/btn10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00:00"/>
        </LinearLayout>
        <Button
            android:id="@+id/confirmBtn"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_gravity="center_horizontal"
            android:textSize="18sp"
            android:text="确认修改"
            android:enabled="false"
            android:background="@drawable/selector_red_pressed"/>
    </LinearLayout>
</LinearLayout>
