<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp">

    <TextView
        android:id="@+id/dayOfWeekTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:text="    星期几："/>
    <EditText
        android:id="@+id/dayOfWeekEt"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/dayOfWeekTv"
        android:layout_marginLeft="5dp"
        android:layout_alignBaseline="@id/dayOfWeekTv"
        android:hint="输入1-5"
        android:textSize="14sp"
        android:inputType="number"
        android:focusable="false"/>

    <TextView
        android:id="@+id/orderOfDayTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/dayOfWeekTv"
        android:layout_marginTop="40dp"
        android:layout_alignRight="@id/dayOfWeekTv"
        android:textSize="16sp"
        android:text="第几节："/>
    <EditText
        android:id="@+id/orderOfDayEt"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/dayOfWeekEt"
        android:layout_alignBaseline="@id/orderOfDayTv"
        android:hint="输入1-5"
        android:textSize="14sp"
        android:inputType="number"
        android:focusable="false"/>

    <TextView
        android:id="@+id/classNameTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/orderOfDayTv"
        android:layout_marginTop="40dp"
        android:layout_alignRight="@id/dayOfWeekTv"
        android:textSize="16sp"
        android:text="课程名称："/>
    <EditText
        android:id="@+id/classNameEt"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/dayOfWeekEt"
        android:layout_alignBaseline="@id/classNameTv"
        android:hint="这节课叫什么名字"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/classRoomTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/classNameTv"
        android:layout_marginTop="40dp"
        android:layout_alignRight="@id/dayOfWeekTv"
        android:textSize="16sp"
        android:text="教室："/>
    <EditText
        android:id="@+id/classRoomEt"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/dayOfWeekEt"
        android:layout_alignBaseline="@id/classRoomTv"
        android:hint="在哪里上课"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/teacherTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/classRoomTv"
        android:layout_marginTop="40dp"
        android:layout_alignRight="@id/dayOfWeekTv"
        android:textSize="16sp"
        android:text="教师："/>
    <EditText
        android:id="@+id/teacherEt"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/dayOfWeekEt"
        android:layout_alignBaseline="@id/teacherTv"
        android:hint="老师是谁"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/startWeekTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/teacherTv"
        android:layout_marginTop="40dp"
        android:layout_alignRight="@id/dayOfWeekTv"
        android:textSize="16sp"
        android:text="起始周："/>
    <EditText
        android:id="@+id/startWeekEt"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/dayOfWeekEt"
        android:layout_alignBaseline="@id/startWeekTv"
        android:hint="从第几周开始上这门课"
        android:textSize="14sp"
        android:inputType="number"/>

    <TextView
        android:id="@+id/endWeekTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/startWeekTv"
        android:layout_marginTop="40dp"
        android:layout_alignRight="@id/dayOfWeekTv"
        android:textSize="16sp"
        android:text="结束周："/>
    <EditText
        android:id="@+id/endWeekEt"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/dayOfWeekEt"
        android:layout_alignBaseline="@id/endWeekTv"
        android:hint="在第几周结束"
        android:textSize="14sp"
        android:inputType="number"/>

    <Button
        android:id="@+id/confirmBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:textSize="20sp"
        android:text="确认修改"/>

</RelativeLayout>