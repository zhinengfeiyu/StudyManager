<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/userNameTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="40dp"
        android:textSize="20sp"
        android:text="用户名："/>
    <EditText
        android:id="@+id/userNameEt"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/userNameTv"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="40dp"
        android:layout_alignBaseline="@id/userNameTv"
        android:hint="请输入用户名"
        android:maxLength="12"
        android:singleLine="true"/>
    <TextView
        android:id="@+id/passwordTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/userNameTv"
        android:layout_marginTop="20dp"
        android:layout_alignRight="@id/userNameTv"
        android:textSize="20sp"
        android:text="密码："/>
    <EditText
        android:id="@+id/passwordEt"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/passwordTv"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="40dp"
        android:layout_alignBaseline="@id/passwordTv"
        android:hint="请输入密码"/>
    <Button
        android:id="@+id/loginBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/passwordTv"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:textSize="20sp"
        android:text="登录"/>
    <TextView
        android:id="@+id/registerTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/loginBtn"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:textSize="15sp"
        android:textColor="@color/blue"
        android:text="注册新用户" />
    <TextView
        android:id="@+id/offlineUseTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/registerTv"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:textSize="15sp"
        android:textColor="@color/blue"
        android:text="我想单机使用" />
</RelativeLayout>